*utf8:                  1
*saveLines:             999999



!
! Xft settings
!
Xft.rgba:       rgb
Xft.autohint:   0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting:    1
Xft.antialias:  1



!
! Rxvt-Unicode
!
URxvt.geometry: 86x60
URxvt*termName: rxvt-unicode
URxvt.scrollBar: false

! fonts
URxvt.font:\
        xft:IBM Plex Mono:style=Regular:pixelsize=18:antialias=true:hinting=full,\
        xft:Hack Nerd Font Mono:style=Regular,\
        xft:Noto Color Emoji,\
        xft:Symbola
URxvt.boldFont:\
        xft:IBM Plex Mono:style=Bold:pixelsize=18:antialias=true:hinting=full,\
        xft:Hack Nerd Font Mono:style=Bold,\
        xft:Noto Color Emoji,\
        xft:Symbola
URxvt.italicFont:\
        xft:IBM Plex Mono:style=Italic:pixelsize=18:antialias=true:hinting=full,\
        xft:Hack Nerd Font Mono:style=Italic,\
        xft:Noto Color Emoji,\
        xft:Symbola
URxvt.boldItalicFont:\
        xft:IBM Plex Mono:style=Bold Italic:pixelsize=18:antialias=true:hinting=full,\
        xft:Noto Color Emoji,\
        xft:Symbola
URxvt.letterSpace: 0

! disable default bindings for Ctrl-Shift
URxvt.iso14755:             false
URxvt.iso14755_52:          false

! Perl extensions
URxvt.perl-ext-common: default,matcher

! clickable urls
URxvt.url-launcher:         /usr/bin/xdg-open
URxvt.matcher.button:       1
URxvt.url-select.underline: true

! open or list urls
URxvt.keysym.C-Delete:      perl:matcher:last
URxvt.keysym.M-Delete:      perl:matcher:list
